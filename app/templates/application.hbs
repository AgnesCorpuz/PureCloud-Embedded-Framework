<html>
    <head>
        <h1>PureCloud Embedded Framework</h1>
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-black.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
        <div class="softphone">
            <iframe id="softphone" allow="camera *; microphone *" src={{frameWorkURL}} frameborder="0"></iframe>
        </div>
        <div class="w3-top">
            <div class="w3-bar w3-theme w3-top w3-left-align w3-large">
                <a class="w3-bar-item w3-button w3-theme" href="/"><img src="/images/genesys_monogram_detail.png" width="50" height="50" alt="genesys.png"></a>                
                <a class="w3-bar-item w3-button w3-hide-small w3-hover-white" href="/contacts">Contacts</a>
                <a class="w3-bar-item w3-button w3-hide-small w3-hover-white" href="/accounts">Accounts</a>
                {{#link-to 'config' class="w3-bar-item w3-button w3-hide-small w3-hover-white"}}Config{{/link-to}}
            </div>
        </div>
        <div class="w3-sidebar w3-bar-block w3-dark-grey w3-medium" style="width:40px">
            <a class="w3-bar-item w3-button" {{action 'openModal' 'modal-main'}} style="padding:5px"><img src="https://dhqbrvplips7x.cloudfront.net/directory/5049/assets/images/svg/person.svg" width="30" height="30"></a>
            <a href="#" class="w3-bar-item w3-button" style="padding:10px"><i class="fa fa-home"></i></a> 
            <a href="#" class="w3-bar-item w3-button" style="padding:10px"><i class="fa fa-search"></i></a> 
            <a href="#" class="w3-bar-item w3-button" style="padding:10px"><i class="fa fa-envelope"></i></a> 
            <a href="#" class="w3-bar-item w3-button" style="padding:10px"><i class="fa fa-globe"></i></a>
            <a href="#" class="w3-bar-item w3-button" style="padding:10px"><i class="fa fa-trash"></i></a> 
        </div>
        {{#profile-modal enabled=false title="-- Set Status --" id="modal-main"}}
            <ul>
                <li onclick={{action "setStatus" "ON_QUEUE"}}>On Queue</li>
                <li onclick={{action "setStatus" "AVAILABLE"}}>Available</li>
                <li onclick={{action "setStatus" "BUSY"}}>Busy</li>
                <li onclick={{action "setStatus" "AWAY"}}>Away</li>
                <li onclick={{action "setStatus" "BREAK"}}>Break</li>
                <li onclick={{action "setStatus" "MEAL"}}>Meal</li>
                <li onclick={{action "setStatus" "MEETING"}}>Meeting</li>
                <li onclick={{action "setStatus" "TRAINING"}}>Training</li>
            </ul>
        {{/profile-modal}}
    </body>
    <footer id="myFooter">
        <div class="w3-center">
            <div class="w3-bar">
                <a class="w3-button w3-black" href="#">1</a>
                <a class="w3-button w3-hover-black" href="#">2</a>
                <a class="w3-button w3-hover-black" href="#">3</a>
                <a class="w3-button w3-hover-black" href="#">4</a>
                <a class="w3-button w3-hover-black" href="#">5</a>
                <a class="w3-button w3-hover-black" href="#">Â»</a>
            </div>
        </div>
        <div class="w3-container w3-theme-l2">
            <p style="text-align:center; margin: 0px;">PureCloud Embedded Framework</p>
        </div>
        <div class="w3-container w3-theme-l1">
            <p style="text-align:center; margin: 0px;">Genesys DevFoundry</p>
        </div>
    </footer>
</html>

{{outlet}}